<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.database_project_salesman">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Home"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".edit_order_form_activity"></activity>
        <activity android:name=".edit_order_rv_activity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity android:name=".edit_order_rv_list"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".show_shop_on_map_activity"
            android:theme="@style/AppTheme"
            android:label="" />
        <activity android:name=".show_order_shop_on_map"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".show_shop_activity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".show_orders_activity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".add_order_activity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".salesname_main_dashboard"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".BrodcastReceivers.LocationBrodcast">
            <intent-filter>
                <action android:name="android.location.GPS_ENABLED_CHANGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>